                                        <PropertyValueFactory property="supplierId" />
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="importDateColumn" text="Import Date" prefWidth="150.0">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="importDate" />
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100.0">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="quantity" />
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="exchangedColumn" text="Exchanged" prefWidth="100.0">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="exchanged" />
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="totalReceivedColumn" text="Total Received" prefWidth="100.0">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="totalReceived" />
                                    </cellValueFactory>
                                </TableColumn>
