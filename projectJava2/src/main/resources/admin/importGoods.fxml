                            <top>
                                <Text fx:id="viewProductName" strokeType="OUTSIDE" strokeWidth="0.0" text="Import Goods" BorderPane.alignment="CENTER_LEFT">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Text>
                            </top>

