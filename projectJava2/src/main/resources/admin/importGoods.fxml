                            <center>
                                <GridPane fx:id="formViewProductView" alignment="CENTER_RIGHT" prefHeight="367.0" prefWidth="750.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="350.0" minWidth="10.0" prefWidth="168.0" />
